<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/vehicleImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vehicle_placeholder"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:background="@drawable/rounded_bg" />


    <TextView
        android:id="@+id/vehicleBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toyota"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/vehicleModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Corolla Cross"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/vehiclePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rs. 12.5M"
        android:textColor="#2E7333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#0B0B0B"
        android:text="Details &amp; Chat"
        android:textColor="#FFFFFF" />
</LinearLayout>