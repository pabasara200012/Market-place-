<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_header_bg"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Login/Logout Icon (Top Right) -->
            <ImageView
                android:id="@+id/logoutIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Logout Icon" />

            <!-- Center Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_profile_foreground"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/circle_bg"
                    android:clipToOutline="true" />


                <!-- Logo/Profile Image (Clickable) -->
                <ImageButton
                    android:id="@+id/uploadUserImageBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chane_immage"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="change_profile"/>


                <!-- User Name -->
                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

        </RelativeLayout>


        <!-- Personal Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Title with Edit Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Personal Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/editInfoBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_edit"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit personal information" />
                </LinearLayout>

                <!-- Full Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full name"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/fullNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parves Ahamad"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Gender and Birthday Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <!-- Gender -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:id="@+id/genderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <!-- Birthday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Birthday"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:id="@+id/birthdayText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="05-01-2001"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Phone Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone number"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/phoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(+880) 1759263000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nirobparvesahammad@gmail.com"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/locationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhaka, Bangladesh"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Username -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/usernameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="parvesahamad"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Edit Personal Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Personal Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="15dp" />

                <!-- Full Name Edit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Parves Ahamad"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Email Edit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="nirobparvesahammad@gmail.com"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Gender Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RadioGroup
                            android:id="@+id/genderRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/maleRadio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:layout_marginRight="20dp" />

                            <RadioButton
                                android:id="@+id/femaleRadio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:layout_marginRight="20dp" />

                            <RadioButton
                                android:id="@+id/otherRadio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Other" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <!-- Birthday Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/editBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="05-01-2001"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:inputType="date"
                        android:textSize="14sp"
                        android:focusable="false"
                        android:clickable="true" />
                </LinearLayout>

                <!-- Phone Edit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="+8801759263000"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:inputType="phone"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Location Edit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/editLocation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Dhaka, Bangladesh"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- Save Button -->
                <Button
                    android:id="@+id/updateProfileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Save Changes"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />


                <!-- Password Change Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <!-- Current Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Password"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/currentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:inputType="textPassword"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- New Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Password"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:inputType="textPassword"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Confirm New Password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirm New Password"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="5dp" />

                    <EditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_border1"
                        android:padding="12dp"
                        android:inputType="textPassword"
                        android:textSize="14sp" />
                </LinearLayout>


                <!-- Change Password Button -->
                <Button
                    android:id="@+id/changePasswordBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Change Password"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->


    </LinearLayout>
</ScrollView>